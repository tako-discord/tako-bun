// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @unique
  uuid       String  @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  language   String  @default("en")
  color      Int?
  background String?
  license    String?
}

enum ReplyStyle {
  minWebhook
  embed
}

model Guild {
  id             String     @id @unique
  color          Int?
  autoRolesUser  String[]
  autoRolesBot   String[]
  autotranslate  Boolean    @default(false)
  language       String     @default("en")
  confidence     Float      @default(0.75)
  replyStyle     ReplyStyle @default(minWebhook)
  deleteOriginal Boolean    @default(false)
}

model Channel {
  id             String  @id @unique
  sticky_message String?
  sticky_embed   Boolean @default(false)
}
